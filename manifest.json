{
    "manifest_version": 2,
    
    "name": "Personalised Home Page",
    "description": "This extension replaces Google Chrome's default homepage.",
    "version": "2.0",
    
    "chrome_url_overrides" : {
        "newtab": "index.html"
    },
    
    "icons": {
        "32": "icons/logo-32.png",
        "64": "icons/logo-64.png",
        "128": "icons/logo-128.png"
      },
      
    "browser_action": {
    "default_icon": "icons/logo-128.png"
    },
    
    "permissions": [
        "tabs"
    ],
    
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    }
    
}